<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="library_book_view_form_inherit_library_extensions" model="ir.ui.view">
        <field name="name">library.book.view.form.inherit.author.category</field>
        <field name="model">library.book</field>
        <field name="inherit_id" ref="library.library_book_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="inside">
                <field name="author_id"/>
                <field name="category_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>

    <record id="library_book_view_list_inherit_library_extensions" model="ir.ui.view">
        <field name="name">library.book.view.list.inherit.author.category</field>
        <field name="model">library.book</field>
        <field name="inherit_id" ref="library.library_book_view_list"/>
        <field name="arch" type="xml">
            <xpath expr="//list" position="inside">
                <field name="author_id"/>
                <field name="category_ids" widget="many2many_tags"/>
            </xpath>
        </field>
    </record>
</odoo>
